package com.futurainstech.iseriesapi.controller;

import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import com.futurainstech.iseriesapi.entities.as400.SLCKPF;
import com.futurainstech.iseriesapi.service.SlckpfService;

@RestController
@RequestMapping("/slckpf")
public class SlckpfController {

	@Autowired
	private SlckpfService slckpfService;
	
	@GetMapping("/getAll")
	public List<SLCKPF> getAllSlckpf() {
		List<SLCKPF> findall = slckpfService.getAll();
		return findall;
	}
	
	@PostMapping("/createSlckpf")
	public SLCKPF createSlckpf(@RequestBody SLCKPF slckpf) {
		return slckpfService.createSlckpf(slckpf);
	}
}
