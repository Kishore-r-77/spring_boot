package com.futurainstech.iseriesapi.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.futurainstech.iseriesapi.entities.as400.SLCKPF;
import com.futurainstech.iseriesapi.service.SlckpfService;

@RestController
@RequestMapping("/slckpf")
public class SlckpfController {

	@Autowired
	private SlckpfService slckpfService;

	public ResponseEntity<List<SLCKPF>> getAllSlckpf() {
		List<SLCKPF> findall = slckpfService.getAll();
		return new ResponseEntity<List<SLCKPF>>(findall, HttpStatus.OK);
	}
}
